<style>
  {% if section.settings.logo != blank %}

  {% endif %}
</style>
<div data-section-id="{{ section.id }}" data-section-type="header-section" class="page-width">
  <header role="banner">
    {% if template.name == 'index' %}
      <!-- do someting different if its the index page -->
    {% else %}
      <!-- for all the other pages -->
    {% endif %}
    <nav role="navigation" class="top">
      <ul class="site-nav">
        {% for link in linklists[section.settings.main_linklist].links %}
          {%- assign child_list_handle = link.title | handleize -%}
            <li {% if link.active %}class="site-nav--active"{% endif %}>
              <a href="{{ link.url }}" class="site-nav__link outline">{{ link.title }}</a>
            </li>
        {% endfor %}
      </ul>
    </nav>
    <div class="cart-wrapper">
      <div class="flex-box">
        <div class="flex__item">
          <a href="/products/the-original-cycling-bottle" class="button green">Buy a Bottle</a>
        </div>
        <div class="flex__item">
          <div class="flex-box">
            <div class="flex__item">
                <a href="/cart" class="button outline">{{ 'layout.cart.title' | t }}</a>
            </div>
            <div class="flex__item counter-wrapper">
              <a href="/cart" class="button grey">{{ cart.item_count }}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>


    <div class="logo-wrapper">
      <a href="/" itemprop="url"><img class="logo" src="{{ 'logo-black.svg' | asset_url }}"></a>
      <div class="tagline">The original cycling bottle</div>
    </div>

</div>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_max_width",
        "min": 50,
        "max": 450,
        "step": 10,
        "unit": "px",
        "label": "Custom logo width",
        "default": 250
      },
      {
        "type": "link_list",
        "id": "main_linklist",
        "label": "Menu",
        "default": "main-menu"
      }
    ]
  }
{% endschema %}
